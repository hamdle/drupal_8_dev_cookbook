<?php

/**
 * @file
 * Custom module that alters forms.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 */
function sitephone_form_system_site_information_settings_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id)
{
    $form['site_phone'] = [
        '#type' => 'tel',
        '#title' => t('Site phone'),
        '#default_value' => '3',
    ];
}